<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jun.cloud.service.mapper.RegionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jun.cloud.service.entity.Region">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="path" property="path" />
        <result column="leaf" property="leaf" />
        <result column="delete_status" property="deleteStatus" />
        <result column="code" property="code" />
        <result column="parent_code" property="parentCode" />
        <result column="type" property="type" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!--测试自定义sql使用Wrapper-->
    <select id="selectRegionInfos" resultType="com.jun.cloud.service.dto.RegionInfoDto" parameterType="com.baomidou.mybatisplus.core.conditions.Wrapper">
        select
        code code,
        name regionName,
        path,
        type
        from region
        ${ew.customSqlSegment}
    </select>


    <!--测试自定义sql使用Wrapper-->
    <select id="selectRegionInfoByPage" resultType="com.jun.cloud.service.dto.RegionInfoDto">
        select
        code code,
        name regionName,
        path,
        type
        from region
        where
        parent_code = #{queryDto.parentCode}
        <if test="queryDto.name != null">
            and name like #{queryDto.name}
        </if>
    </select>



</mapper>
